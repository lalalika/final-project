
    function upArrowPressed() {

 	
 
 	var y = 50;
	var processing = Processing.getInstanceById("mycanvas");

	var interval = setInterval(function() {
		y++;
		image1.style.top = 50 - (-0.1 * (0.5*y) * (y - 50)) + 'px';
	
		processing.chinchillaMoved(getPosition(image1));
	
		if(y >= 100) clearInterval(interval);
	}, 10);
	
	var shark = document.getElementById("image2");
	
	
	
	shark.style.left = parseInt(shark.style.left) + 10 + 'px';

	getPosition(image2);
	


}


    function rightArrowPressed() {
            var element = document.getElementById("image1");
            element.style.left = parseInt(element.style.left) + 5 + 'px';
        
	getPosition(image2);

            }
    function leftArrowPressed() {
            var element = document.getElementById("image1");
            element.style.left = parseInt(element.style.left) - 5 + 'px';
  
	getPosition(image2);
            }



            function moveSelection(evt) {
                switch (evt.keyCode) {
                	case 37:
                    leftArrowPressed();
                    break;
                 	case 39:
                    rightArrowPressed();
                    break;
                    case 38:
                    upArrowPressed();
                    break;
                    
                    
                    }
                };

        function docReady()
        {
          
          window.addEventListener('keydown', moveSelection);
        }
           
        
	function getPosition(element) {
    var xPosition = 0;
    var yPosition = 0;
  
    while(element) {
        xPosition += (element.offsetLeft - element.scrollLeft + element.clientLeft);
        yPosition += (element.offsetTop - element.scrollTop + element.clientTop);
        element = element.offsetParent;
    }
    return { x: xPosition, y: yPosition };
}
